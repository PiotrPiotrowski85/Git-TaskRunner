  },
  "homepage": "https://github.com/PiotrPiotrowski85/Git-TaskRunner#readme",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.24.5",
    "globstar": "^1.0.0",
    "nu-html-checker": "^0.1.0"
  }
}
